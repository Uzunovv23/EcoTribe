@model List<EcoTribe.BusinessObjects.ViewModels.LocationViewModel>

@{
    ViewData["Title"] = "Locations";
}

<h2>Locations</h2>

<a asp-controller="Location" asp-action="Create" class="btn btn-primary mb-3">Add Location</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@location.Id</td>
                <td>@location.Name</td>
                <td>@location.City</td>
                <td>@location.Latitude</td>
                <td>@location.Longitude</td>
                <td>@(string.IsNullOrEmpty(location.Description) ? "N/A" : location.Description)</td>
                <td>
                    <a asp-controller="Location" asp-action="Edit" asp-route-id="@location.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

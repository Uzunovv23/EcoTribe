@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/forgot-password-confirmation.css">
</head>
<body>
    <div class="container">
        <div class="background-animation">
            <div class="floating-shape shape-1"></div>
            <div class="floating-shape shape-2"></div>
            <div class="floating-shape shape-3"></div>
            <div class="floating-shape shape-4"></div>
        </div>

        <div class="confirmation-container">
            <div class="success-animation">
                <div class="checkmark-container">
                    <svg class="checkmark" viewBox="0 0 52 52">
                        <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                        <path class="checkmark-check" fill="none" d="m14.1 27.2l7.1 7.2 16.7-16.8" />
                    </svg>
                </div>
            </div>

            <div class="content">
                <h1 class="title">Check Your Email</h1>
                <p class="message">
                    If an account with that email exists, a password reset link has been sent.
                    Please check your inbox and follow the instructions to reset your password.
                </p>

                <div class="info-cards">
                    <div class="info-card">
                        <div class="card-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                        </div>
                        <div class="card-content">
                            <h3>Check Your Inbox</h3>
                            <p>Look for an email from our team with reset instructions.</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="card-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12,6 12,12 16,14"></polyline>
                            </svg>
                        </div>
                        <div class="card-content">
                            <h3>Link Expires Soon</h3>
                            <p>The reset link will expire in 24 hours for security.</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="card-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M9 12l2 2 4-4"></path>
                                <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"></path>
                                <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"></path>
                            </svg>
                        </div>
                        <div class="card-content">
                            <h3>Check Spam Folder</h3>
                            <p>Sometimes emails end up in spam or junk folders.</p>
                        </div>
                    </div>
                </div>

                <div class="actions">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                            <polyline points="10,17 15,12 10,7"></polyline>
                            <line x1="15" y1="12" x2="3" y2="12"></line>
                        </svg>
                        Back to Sign In
                    </a>

                    <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-secondary">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="1,4 1,10 7,10"></polyline>
                            <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"></path>
                        </svg>
                        Resend Email
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/forgot-password-confirmation.js"></script>
</body>
</html>
@model EcoTribe.BusinessObjects.InputModels.ResetPasswordInputModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/reset-password.css">
</head>
<body>
    <div class="container">
        <div class="background-animation">
            <div class="floating-shape shape-1"></div>
            <div class="floating-shape shape-2"></div>
            <div class="floating-shape shape-3"></div>
            <div class="floating-shape shape-4"></div>
        </div>

        <div class="form-container">
            <div class="form-header">
                <div class="icon-container">
                    <svg class="key-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"></path>
                    </svg>
                </div>
                <h1 class="form-title">Reset Your Password</h1>
                <p class="form-subtitle">Enter your new password below. Make sure it's strong and secure.</p>
            </div>

            <form asp-action="ResetPassword" method="post" class="reset-password-form" id="resetPasswordForm">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="input-group">
                    <div class="input-container">
                        <input asp-for="Password" type="password" class="form-input" id="password" required>
                        <label asp-for="Password" class="form-label">New Password</label>
                        <button type="button" class="password-toggle" id="passwordToggle">
                            <svg class="eye-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        </button>
                        <div class="input-focus-border"></div>
                    </div>
                    <span asp-validation-for="Password" class="error-message"></span>
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-bar">
                            <div class="strength-fill"></div>
                        </div>
                        <span class="strength-text">Password strength</span>
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-container">
                        <input asp-for="ConfirmPassword" type="password" class="form-input" id="confirmPassword" required>
                        <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <button type="button" class="password-toggle" id="confirmPasswordToggle">
                            <svg class="eye-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        </button>
                        <div class="input-focus-border"></div>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                </div>

                <div class="password-requirements">
                    <h4>Password Requirements:</h4>
                    <ul class="requirements-list">
                        <li class="requirement" data-requirement="length">
                            <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="20,6 9,17 4,12"></polyline>
                            </svg>
                            At least 8 characters long
                        </li>
                        <li class="requirement" data-requirement="uppercase">
                            <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="20,6 9,17 4,12"></polyline>
                            </svg>
                            One uppercase letter
                        </li>
                        <li class="requirement" data-requirement="lowercase">
                            <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="20,6 9,17 4,12"></polyline>
                            </svg>
                            One lowercase letter
                        </li>
                        <li class="requirement" data-requirement="number">
                            <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="20,6 9,17 4,12"></polyline>
                            </svg>
                            One number
                        </li>
                    </ul>
                </div>

                <button type="submit" class="submit-btn" id="submitBtn">
                    <span class="btn-text">Reset Password</span>
                    <span class="btn-loader" style="display: none;">
                        <svg class="spinner" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"
                                    stroke-linecap="round" stroke-dasharray="31.416" stroke-dashoffset="31.416">
                                <animate attributeName="stroke-dasharray" dur="2s" values="0 31.416;15.708 15.708;0 31.416" repeatCount="indefinite" />
                                <animate attributeName="stroke-dashoffset" dur="2s" values="0;-15.708;-31.416" repeatCount="indefinite" />
                        </svg>
                    </span>
                    </span>
                </button>
            </form>

            <div class="form-footer">
                <p>Remember your password? <a href="@Url.Action("Login", "Account")" class="back-link">Sign In</a></p>
            </div>
        </div>
    </div>

    <script src="~/js/reset-password.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
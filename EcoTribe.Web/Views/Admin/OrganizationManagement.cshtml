@using EcoTribe.BusinessObjects.Domain.Enums
@model EcoTribe.BusinessObjects.ViewModels.OrganizationManagementViewModel

<h3>Organizations</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var org in Model.AllOrganizations)
        {
            <tr>
                <td>@org.Name</td>
                <td>@org.Description</td>
                <td>
                    @(org.Status == OrganizationStatus.Approved ? "Approved" :
                        org.Status == OrganizationStatus.Disapproved ? "Disapproved" : "Pending")
                </td>
                <td>
                    @if (org.Status == OrganizationStatus.Pending)
                    {
                        <form asp-action="ApproveOrganization" asp-controller="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="organizationId" value="@org.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>

                        <form asp-action="DisapproveOrganization" asp-controller="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="organizationId" value="@org.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Disapprove</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="ToggleOrganizationStatus" method="post" style="display:inline;">
                            <input type="hidden" name="organizationId" value="@org.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Change Status</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

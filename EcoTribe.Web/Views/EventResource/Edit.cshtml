@model EcoTribe.BusinessObjects.InputModels.EventResourceInputModel

@{
    ViewData["Title"] = "Edit Event Resource";
}

<h2>Edit Event Resource</h2>

<form method="post" asp-action="Edit" asp-route-id="@Model.EventId">
    <div class="form-group">
        <label for="EventId">Event ID</label>
        <input type="number" id="EventId" name="EventId" class="form-control" value="@Model.EventId" readonly />
    </div>

    <div class="form-group">
        <label for="ResourceName">Resource Name</label>
        <input type="text" id="ResourceName" name="ResourceName" class="form-control" value="@Model.ResourceName" />
        @if (!string.IsNullOrEmpty(ViewData["ResourceNameError"]?.ToString()))
        {
            <div class="text-danger">@ViewData["ResourceNameError"]</div>
        }
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity" />
        @if (!string.IsNullOrEmpty(ViewData["QuantityError"]?.ToString()))
        {
            <div class="text-danger">@ViewData["QuantityError"]</div>
        }
    </div>

    <div class="form-group">
        <label for="ProvidedBy">Provided By</label>
        <input type="text" id="ProvidedBy" name="ProvidedBy" class="form-control" value="@Model.ProvidedBy" />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" id="Status" name="Status" class="form-control" value="@Model.Status" />
        @if (!string.IsNullOrEmpty(ViewData["StatusError"]?.ToString()))
        {
            <div class="text-danger">@ViewData["StatusError"]</div>
        }
    </div>

    <div class="form-group">
        <label for="Notes">Notes</label>
        <textarea id="Notes" name="Notes" class="form-control">@Model.Notes</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "EventResource")" class="btn btn-secondary">Cancel</a>
</form>

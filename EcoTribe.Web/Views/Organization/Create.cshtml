@model EcoTribe.BusinessObjects.InputModels.OrganizationInputModel

@{
    ViewData["Title"] = "Add Your Organization";
}

<link rel="stylesheet" href="~/css/organization-create.css" />

<div class="org-create-container">
    <div class="org-create-header">
        <h1>Add Your Organization</h1>
        <p>Join our community of sustainable organizations making a difference</p>
    </div>

    <div class="progress-container">
        <div class="progress-bar">
            <div class="progress-fill" style="width: 0%"></div>
        </div>
        <span class="progress-text">0% Complete</span>
    </div>

    <div class="org-create-card">
        <form asp-controller="Organization" asp-action="Create" method="post" class="org-create-form">
            @Html.AntiForgeryToken()

            <div class="form-section">
                <h2>Basic Information</h2>

                <div class="form-group">
                    <label asp-for="Name">
                        Organization Name
                        <span class="required">*</span>
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="Name" class="form-control" required placeholder="Enter your organization's name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ContactEmail">
                        Contact Email
                        <span class="required">*</span>
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="ContactEmail" type="email" class="form-control" required placeholder="contact@yourorganization.com" />
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Phone">Phone Number</label>
                    <input asp-for="Phone" class="form-control" placeholder="(123) 456-7890" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section">
                <h2>Additional Details</h2>

                <div class="form-group">
                    <label asp-for="Website">Website</label>
                    <input asp-for="Website" type="url" class="form-control" placeholder="https://www.yourorganization.com" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description">
                        Description
                        <span class="required">*</span>
                    </label>
                    <div class="input-wrapper">
                        <textarea asp-for="Description" class="form-control" required placeholder="Tell us about your organization's mission and activities"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="char-count">
                        <span>0</span> characters
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="City">
                        City
                        <span class="required">*</span>
                    </label>
                    <input asp-for="City" class="form-control" required placeholder="Enter your city" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-submit">
                    <span class="btn-icon">✓</span>
                    Save Organization
                </button>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/organization-create-edit.css" />
@section Scripts {
    <script src="~/js/organization-create-edit.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
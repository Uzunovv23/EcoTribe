@model EcoTribe.BusinessObjects.InputModels.EventVolunteerInputModel

@{
    ViewData["Title"] = "Add Event Volunteer";
}

<h2>Add Event Volunteer</h2>

<form asp-controller="EventVolunteer" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="VolunteerId"></label>
        <input asp-for="VolunteerId" class="form-control" />
        <span asp-validation-for="VolunteerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventId"></label>
        <input asp-for="EventId" class="form-control" />
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Intention"></label>
        <textarea asp-for="Intention" class="form-control"></textarea>
        <span asp-validation-for="Intention" class="text-danger"></span>
    </div>

    <select asp-for="Attended" class="form-control">
        <option value="">Not specified</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-controller="EventVolunteer" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@model EcoTribe.BusinessObjects.InputModels.EventSponsorInputModel

@{
    ViewData["Title"] = "Edit Event Sponsor";
}

<h2>Edit Event Sponsor</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EventId" />
    <input type="hidden" asp-for="OrganizationId" />

    <div class="form-group">
        <label asp-for="EventId" class="control-label"></label>
        <input asp-for="EventId" class="form-control" readonly />
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrganizationId" class="control-label"></label>
        <input asp-for="OrganizationId" class="form-control" />
        <span asp-validation-for="OrganizationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

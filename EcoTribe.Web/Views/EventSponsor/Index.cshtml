@model IEnumerable<EcoTribe.BusinessObjects.ViewModels.EventSponsorViewModel>

@{
    ViewData["Title"] = "Event Sponsors";
}

<h2>Event Sponsors</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Sponsor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Organization</th>
            <th>Description</th>
            <th>Website</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sponsor in Model)
        {
            <tr id="sponsor-@sponsor.Id">
                <td>@sponsor.Event.Name</td>
                <td>@sponsor.OrganizationName</td>
                <td>@sponsor.OrganizationDescription</td>
                <td>
                    @if (!string.IsNullOrEmpty(sponsor.OrganizationWebsite))
                    {
                        <a href="@sponsor.OrganizationWebsite" target="_blank">Website</a>
                    }
                </td>
                <td>@sponsor.OrganizationPhone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sponsor.Id" class="btn btn-secondary">Edit</a>
                    <button class="btn btn-danger" onclick="deleteEventSponsor(@sponsor.Id)">
                        <i class="fas fa-trash"></i> Delete
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        function deleteEventSponsor(eventSponsorId) {
            if (!confirm("Are you sure you want to delete this event sponsor?")) {
                return;
            }

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch(`/EventSponsor/DeleteConfirmed`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/x-www-form-urlencoded",
                    "RequestVerificationToken": token
                },
                body: new URLSearchParams({
                    id: eventSponsorId
                }).toString()
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error("Failed to delete event sponsor.");
                }
                return response.text();
            })
            .then(() => {
                document.getElementById(`sponsor-${eventSponsorId}`).remove();
            })
            .catch(error => {
                alert(error.message);
            });
        }
    </script>

}

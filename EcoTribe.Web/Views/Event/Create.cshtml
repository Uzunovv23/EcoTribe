@model EcoTribe.BusinessObjects.InputModels.EventInputModel

@{
    ViewData["Title"] = "Create Event";
}

<div class="event-create-container">
    <div class="page-header">
        <h2 class="page-title">Create Environmental Event</h2>
        <p class="subtitle">Plan your next eco-friendly initiative</p>
    </div>

    <div class="event-form-container">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-section">
                        <h3><i class="bi bi-info-circle"></i> Basic Information</h3>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Event Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Beach Cleanup Day" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Event Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="">Select event type...</option>
                                <option value="Cleanup">Cleanup</option>
                                <option value="Tree Planting">Tree Planting</option>
                                <option value="Recycling">Recycling</option>
                                <option value="Education">Environmental Education</option>
                                <option value="Conservation">Conservation</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Describe your environmental initiative..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3><i class="bi bi-calendar-event"></i> Event Schedule</h3>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Start" class="form-label">Start Date & Time</label>
                                <input asp-for="Start" class="form-control" type="datetime-local" />
                                <span asp-validation-for="Start" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="End" class="form-label">End Date & Time</label>
                                <input asp-for="End" class="form-control" type="datetime-local" />
                                <span asp-validation-for="End" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-section">
                        <h3><i class="bi bi-geo-alt"></i> Location</h3>

                        <div class="mb-3">
                            <label for="addressSearch" class="form-label">Search Location</label>
                            <div class="input-group">
                                <input type="text" id="addressSearch" class="form-control"
                                       placeholder="Enter city, street, etc.">
                                <button type="button" class="btn btn-outline-success" onclick="geocodeAddress()">
                                    <i class="bi bi-search"></i> Find
                                </button>
                            </div>
                        </div>

                        <div id="map" class="mb-3"></div>

                        <input asp-for="Latitude" type="hidden" />
                        <input asp-for="Longitude" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" id="CityInput" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3><i class="bi bi-people"></i> Volunteer Information</h3>

                        <div class="mb-3">
                            <label asp-for="RequiredVolunteers" class="form-label">Number of Volunteers Needed</label>
                            <input asp-for="RequiredVolunteers" class="form-control" type="number" min="1" />
                            <span asp-validation-for="RequiredVolunteers" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Create Event
                </button>
                <a asp-controller="Event" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
<link rel="stylesheet" href="~/css/event-create.css" />

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="~/js/event-create.js"></script>
}
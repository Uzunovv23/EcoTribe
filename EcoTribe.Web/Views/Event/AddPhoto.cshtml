@model EcoTribe.BusinessObjects.InputModels.AddPhotoInputModel

@{
    ViewData["Title"] = "Add Photo";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/add-photo.css" />
}

<div class="photo-upload-page">
    <div class="container">
        <div class="upload-header">
            <div class="header-content">
                <div class="back-button">
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn-back">
                        <i class="bi bi-arrow-left"></i>
                        <span>Back to Event</span>
                    </a>
                </div>
                <div class="header-text">
                    <h1 class="page-title">
                        <i class="bi bi-camera-fill"></i>
                        Add Event Photos
                    </h1>
                    <p class="page-subtitle">Share memorable moments from this event</p>
                </div>
            </div>
        </div>

        <div class="upload-content">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <div class="upload-card">
                        <form asp-action="AddPhoto" method="post" enctype="multipart/form-data" id="photoUploadForm">
                            <input type="hidden" asp-for="EventId" />

                            <div class="upload-zone" id="uploadZone">
                                <div class="upload-zone-content">
                                    <div class="upload-icon">
                                        <i class="bi bi-cloud-upload"></i>
                                    </div>
                                    <h3 class="upload-title">Drag & Drop Your Photos</h3>
                                    <p class="upload-description">or click to browse files</p>
                                    <div class="upload-specs">
                                        <span class="spec-item">
                                            <i class="bi bi-file-earmark-image"></i>
                                            JPG, PNG, GIF
                                        </span>
                                        <span class="spec-item">
                                            <i class="bi bi-hdd"></i>
                                            Max 10MB
                                        </span>
                                    </div>
                                </div>
                                <input asp-for="Photo" type="file" class="file-input" id="photoInput" accept="image/*" multiple />
                            </div>

                            <div class="photo-preview-area" id="photoPreviewArea" style="display: none;">
                                <h4 class="preview-title">
                                    <i class="bi bi-eye"></i>
                                    Photo Preview
                                </h4>
                                <div class="preview-grid" id="previewGrid">
                                </div>
                            </div>

                            <div class="upload-progress" id="uploadProgress" style="display: none;">
                                <div class="progress-bar">
                                    <div class="progress-fill" id="progressFill"></div>
                                </div>
                                <div class="progress-text" id="progressText">Uploading... 0%</div>
                            </div>

                            <div class="action-buttons">
                                <button type="submit" class="btn btn-upload" id="uploadButton" disabled>
                                    <i class="bi bi-upload"></i>
                                    <span>Upload Photos</span>
                                </button>
                                <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-cancel">
                                    <i class="bi bi-x-circle"></i>
                                    <span>Cancel</span>
                                </a>
                            </div>

                            <div class="validation-messages">
                                <span asp-validation-for="Photo" class="validation-error"></span>
                            </div>
                        </form>
                    </div>

                    <div class="upload-tips">
                        <h5 class="tips-title">
                            <i class="bi bi-lightbulb"></i>
                            Photo Upload Tips
                        </h5>
                        <div class="tips-grid">
                            <div class="tip-item">
                                <i class="bi bi-camera"></i>
                                <div class="tip-content">
                                    <h6>High Quality</h6>
                                    <p>Upload high-resolution photos for the best viewing experience</p>
                                </div>
                            </div>
                            <div class="tip-item">
                                <i class="bi bi-people"></i>
                                <div class="tip-content">
                                    <h6>Capture Moments</h6>
                                    <p>Include photos of volunteers, activities, and event highlights</p>
                                </div>
                            </div>
                            <div class="tip-item">
                                <i class="bi bi-shield-check"></i>
                                <div class="tip-content">
                                    <h6>Privacy Aware</h6>
                                    <p>Ensure you have permission to share photos with people in them</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/add-photo.js"></script>
}
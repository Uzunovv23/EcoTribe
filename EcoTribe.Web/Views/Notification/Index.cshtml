@model IEnumerable<EcoTribe.BusinessObjects.ViewModels.NotificationViewModel>

@{
    ViewData["Title"] = "Notifications";
}

<h2 class="text-2xl font-bold mb-4">Your Notifications</h2>

@if (!Model.Any())
{
    <p>You have no notifications.</p>
}
else
{
    <ul class="space-y-3">
        @foreach (var notification in Model)
        {
            <li class="border rounded-lg p-4 @(notification.IsRead ? "bg-gray-100" : "bg-yellow-100")">
                <strong>@notification.Title</strong>
                <p>@notification.Message</p>
                <small class="text-gray-600">@notification.CreatedAt.ToLocalTime().ToString("g")</small>

                @if (!notification.IsRead)
                {
                    <a href="@Url.Action("MarkAsRead", "Notification", new { id = notification.Id })" class="text-blue-500 hover:underline">Mark as read</a>
                }
            </li>
        }
    </ul>
}

